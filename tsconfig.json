{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "experimentalDecorators": true,
        "jsx": "preserve",
        "lib": [
            "dom",
            "es6",
            "es2015"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitThis": true,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "es5"
    },
    "exclude": [
        "**/*.test.ts",
        "**/*.test.tsx"
    ],
    "include": [
        "./src/**/*"
    ],
    "typeAcquisition": {
        "enable": true
    }
}